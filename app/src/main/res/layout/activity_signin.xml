<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/testbackground"
    tools:context=".Home">


        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/loginButton"
            android:onClick="login"
            android:background="@drawable/signinbutton"
            android:layout_below="@+id/password"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:id="@+id/registerButton"
            android:onClick="register"
            android:background="@drawable/signinbutton"
            android:layout_alignTop="@+id/loginButton"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:background="@drawable/customedittext"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginBottom="3dp"
            android:textSize="15dp"
            android:textCursorDrawable="@null"
            android:layout_below="@+id/username"
            android:layout_alignLeft="@+id/username"
            android:layout_alignStart="@+id/username" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username"
            android:background="@drawable/customedittext"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginBottom="3dp"
            android:textSize="15dp"
            android:textCursorDrawable="@null"
            android:layout_marginTop="323dp"
            android:layout_centerHorizontal="true"
            android:elegantTextHeight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/googlePlay"
        android:id="@+id/googlePlay"
        android:background="@drawable/signinbutton"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/loginButton"
        android:layout_alignEnd="@+id/loginButton"
        android:layout_alignLeft="@+id/registerButton"
        android:layout_alignStart="@+id/registerButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
